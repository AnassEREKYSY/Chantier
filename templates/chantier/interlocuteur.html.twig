{% extends 'base.html.twig' %}

{% block body %}
    <style>
        a{
            color: aliceblue;
            text-decoration: none;
        }
        a:hover{
            cursor: pointer;
            color: aliceblue;
        }
    </style>
    <div class="container">
        <div class="container text-center">
            <button type="button" class="btn btn-primary mx-5">
                <a href="{{ path('app_add',{'id':'inter'}) }}">Ajouter</a>
            </button>
            <button type="button" class="btn btn-success mx-5">
                <a href="{{ path('app_searche',{'id':'inter'})}}">Chercher</a>
            </button>
        </div>
        <section class="contanier my-5">
            <table class="table text-center">
                <thead>
                <tr>
                    <th >ID</th>
                    <th >Nom</th>
                    <th >Prénom</th>
                    <th >Fonction</th>
                    <th >Télèphone</th>
                </tr>
                </thead>
                <tbody>
                {% for inter in inters %}
                    <tr>
                        <td>{{ inter.id }}</td>
                        <td>{{ inter.nom }}</td>
                        <td>{{ inter.prenom }}</td>
                        <td>{{ inter.fonction }}</td>
                        <td>{{ inter.telephone }}</td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm">
                                <a href="{{ path('app_update',{'id':'inter'})}}">
                                    <i class="fas fa-pen"></i>
                                </a>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="{{ path('app_delete',{'id':'inter'})}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
{% endblock %}